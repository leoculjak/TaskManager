    </actionGroup>
  </actions>
  <businessRules>
    <rule id="r100" commandName="Insert" type="Sql" phase="Before"><![CDATA[set @OrganizationID = @BusinessRules_OrganizationID]]></rule>
  </businessRules>
</dataController>