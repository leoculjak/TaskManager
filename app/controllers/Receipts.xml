<?xml version="1.0" encoding="utf-8"?>
<dataController name="Receipts" conflictDetection="overwriteChanges" label="Receipts" xmlns="urn:schemas-codeontime-com:data-aquarium">
  <commands>
    <command id="command1" type="Text">
      <text><![CDATA[
select
	"Receipts"."Id" "ID"
	,"Receipts"."Vendor" "Vendor"
	,"Receipts"."UnitPrice" "UnitPrice"
	,"Receipts"."Quantity" "Quantity"
	,"Receipts"."Total" "Total"
	,"Receipts"."Category" "Category"
	,"Receipts"."CreatedOn" "CreatedOn"
	,"Receipts"."CreatedBy" "CreatedBy"
	,"CreatedBy"."UserName" "CreatedByUserName"
	,"CreatedByOrganization"."Name" "CreatedByOrganizationName"
	,"Receipts"."OrganizationId" "OrganizationID"
	,"Organization"."Name" "OrganizationName"
from "dbo"."Receipts" "Receipts"
	left join "dbo"."Users" "CreatedBy" on "Receipts"."CreatedBy" = "CreatedBy"."Id"
	left join "dbo"."Organizations" "CreatedByOrganization" on "CreatedBy"."OrganizationId" = "CreatedByOrganization"."Id"
	left join "dbo"."Organizations" "Organization" on "Receipts"."OrganizationId" = "Organization"."Id"
]]></text>
    </command>
    <command id="IdIdentityCommand" type="Text" event="Inserted">
      <text><![CDATA[select @@identity]]></text>
      <output>
        <fieldOutput fieldName="ID" />
      </output>
    </command>
  </commands>
  <fields>
    <field name="ID" type="Int32" allowNulls="false" isPrimaryKey="true" label="Id" readOnly="true" />
    <field name="Vendor" type="String" label="Vendor" length="128" showInSummary="true" />
    <field name="UnitPrice" type="Decimal" dataFormatString="c" label="Unit Price" showInSummary="true" />
    <field name="Quantity" type="Int32" label="Quantity" showInSummary="true" />
    <field name="Total" type="Decimal" dataFormatString="c" label="Total" showInSummary="true" />
    <field name="Category" type="String" label="Category" length="128" showInSummary="true" />
    <field name="CreatedOn" type="DateTime" dataFormatString="g" label="Created On" />
    <field name="CreatedBy" type="Int32" label="Created By">
      <items style="Lookup" dataController="Users" newDataView="createForm1" dataValueField="ID" dataTextField="UserName" copy="CreatedByOrganizationName=OrganizationName" />
    </field>
    <field name="CreatedByUserName" type="String" readOnly="true" label="Created By User Name" length="128" />
    <field name="CreatedByOrganizationName" type="String" readOnly="true" label="Created By Organization Name" length="128" />
    <field name="OrganizationID" type="Int32" label="Organization Id">
      <items style="Lookup" dataController="Organizations" newDataView="createForm1" dataValueField="ID" dataTextField="Name" />
    </field>
    <field name="OrganizationName" type="String" readOnly="true" label="Organization Name" length="128" />
  </fields>
  <views>
    <view id="grid1" type="Grid" commandId="command1" label="Receipts">
      <headerText>$DefaultGridViewDescription</headerText>
      <dataFields>
        <dataField fieldName="Vendor" />
        <dataField fieldName="UnitPrice" columns="15" />
        <dataField fieldName="Quantity" columns="15" />
        <dataField fieldName="Total" columns="15" />
        <dataField fieldName="Category" />
        <dataField fieldName="CreatedOn" columns="20" />
        <dataField fieldName="CreatedBy" aliasFieldName="CreatedByUserName" />
        <dataField fieldName="CreatedByOrganizationName" />
        <dataField fieldName="OrganizationID" aliasFieldName="OrganizationName" />
      </dataFields>
    </view>
    <view id="editForm1" type="Form" commandId="command1" label="Review Receipts">
      <headerText>$DefaultEditViewDescription</headerText>
      <categories>
        <category id="c1" headerText="Receipts" flow="NewColumn">
          <description><![CDATA[$DefaultEditDescription]]></description>
          <dataFields>
            <dataField fieldName="Vendor" />
            <dataField fieldName="UnitPrice" columns="15" />
            <dataField fieldName="Quantity" columns="15" />
            <dataField fieldName="Total" columns="15" />
            <dataField fieldName="Category" />
            <dataField fieldName="CreatedOn" columns="20" />
            <dataField fieldName="CreatedBy" aliasFieldName="CreatedByUserName" />
            <dataField fieldName="CreatedByOrganizationName" />
            <dataField fieldName="OrganizationID" aliasFieldName="OrganizationName" />
          </dataFields>
        </category>
      </categories>
    </view>
    <view id="createForm1" type="Form" commandId="command1" label="New Receipts">
      <headerText>$DefaultCreateViewDescription</headerText>
      <categories>
        <category id="c1" flow="NewColumn">
          <description><![CDATA[$DefaultNewDescription]]></description>
          <dataFields>
            <dataField fieldName="Vendor" />
            <dataField fieldName="UnitPrice" columns="15" />
            <dataField fieldName="Quantity" columns="15" />
            <dataField fieldName="Total" columns="15" />
            <dataField fieldName="Category" />
            <dataField fieldName="CreatedOn" columns="20" />
            <dataField fieldName="CreatedBy" aliasFieldName="CreatedByUserName" />
            <dataField fieldName="CreatedByOrganizationName" />
            <dataField fieldName="OrganizationID" aliasFieldName="OrganizationName" />
          </dataFields>
        </category>
      </categories>
    </view>
  </views>
  <actions>
    <actionGroup id="ag1" scope="Grid">
      <action id="a1" commandName="Select" commandArgument="editForm1" />
      <action id="a2" commandName="Edit" />
      <action id="a3" commandName="Delete" />
